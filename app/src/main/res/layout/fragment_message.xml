<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/cut_card_background_home">

    <TextView
        android:id="@+id/tvLogoHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginLeft="200dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"
        android:text="Centru medical de recuperare"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <GridLayout
        android:layout_width="400dp"
        android:layout_height="570dp"
        android:layout_below="@+id/tvLogoHome"
        android:layout_marginTop="50dp"
        android:columnCount="2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:rowCount="3">

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="0"
            android:layout_column="0"
            app:cardCornerRadius="15dp"
            card_view:cardBackgroundColor="@android:color/transparent"
            card_view:cardUseCompatPadding="true"
            app:cardElevation="0dp"
            >

            <LinearLayout
                android:id="@+id/logoHome"
                android:orientation="vertical"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:background="@drawable/round_corners_cards"
                >

                <ImageView

                    android:layout_width="56dp"
                    android:layout_height="59dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/home"
                    />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/logoHome"
                    android:text="Programari"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
