<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreeazaCont">
    <TextView
        android:id="@+id/denumire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cabinet Medical Vânători"
        android:textSize="30sp"
        android:textColor="#00A300"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        />
    <TextView
        android:id="@+id/bunVenit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bun Venit!"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textColor="#00A300"
        android:textAlignment="center"
        android:fontFamily="sans-serif-black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/denumire"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <EditText
        android:id="@+id/email"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:inputType="textEmailAddress"

        android:textSize="25sp"
        android:textAlignment="center"
        android:hint="Email"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bunVenit"
        app:layout_constraintLeft_toLeftOf="parent"



        />
    <EditText
        android:id="@+id/CNP"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:ems="10"

        android:textSize="25sp"
        android:textAlignment="center"
        android:inputType="number"
        android:hint="CNP"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintLeft_toLeftOf="parent"



        />
    <EditText
        android:id="@+id/parola"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:ems="10"

        android:textSize="25sp"
        android:textAlignment="center"
        android:inputType="textPassword"
        android:hint="Parola"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CNP"
        app:layout_constraintLeft_toLeftOf="parent"

        />
    <EditText
        android:id="@+id/nrTelefon"

        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:ems="10"

        android:textSize="25sp"
        android:textAlignment="center"

        android:inputType="phone"
        android:hint="Număr de telefon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/parola"
        app:layout_constraintLeft_toLeftOf="parent"

        />


    <Button
        android:id="@+id/buttonCreeaza"
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="#00A300"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="Crează cont"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nrTelefon"
        app:layout_constraintLeft_toLeftOf="parent"


        />
    <ProgressBar
        android:id="@+id/progres"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        tools:ignore="MissingConstraints"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"


        />

</androidx.constraintlayout.widget.ConstraintLayout>