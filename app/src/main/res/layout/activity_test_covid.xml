<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.testcovid.TestCovidActivity">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:background="@null"
        android:padding="@dimen/dimen_10dp"
        android:src="@drawable/arrow_back"
        app:layout_constraintBottom_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvTitle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/mont_heavy"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/dimen_10dp"
        android:text="@string/screening_covid_19_online"
        android:textColor="@color/red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <eu.ase.grupa1088.licenta.customviews.CovidQuestionItem
                android:id="@+id/covidQuestion1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:questionText="@string/lorem_ipsum"
                tools:ignore="NotSibling" />

            <eu.ase.grupa1088.licenta.customviews.CovidQuestionItem
                android:id="@+id/covidQuestion2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                app:layout_constraintTop_toBottomOf="@id/covidQuestion1"
                app:questionText="@string/lorem_ipsum" />

            <eu.ase.grupa1088.licenta.customviews.CovidQuestionItem
                android:id="@+id/covidQuestion3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                app:layout_constraintTop_toBottomOf="@id/covidQuestion2"
                app:questionText="@string/lorem_ipsum" />

            <eu.ase.grupa1088.licenta.customviews.CovidQuestionItem
                android:id="@+id/covidQuestion4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                app:layout_constraintTop_toBottomOf="@id/covidQuestion3"
                app:questionText="@string/lorem_ipsum" />

            <eu.ase.grupa1088.licenta.customviews.CovidQuestionItem
                android:id="@+id/covidQuestion5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                app:layout_constraintTop_toBottomOf="@id/covidQuestion4"
                app:questionText="@string/lorem_ipsum" />

            <eu.ase.grupa1088.licenta.customviews.CovidQuestionItem
                android:id="@+id/covidQuestion6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                app:layout_constraintTop_toBottomOf="@id/covidQuestion5"
                app:questionText="@string/lorem_ipsum" />

            <eu.ase.grupa1088.licenta.customviews.CovidQuestionItem
                android:id="@+id/covidQuestion7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                app:layout_constraintTop_toBottomOf="@id/covidQuestion6"
                app:questionText="@string/lorem_ipsum" />

            <eu.ase.grupa1088.licenta.customviews.CovidQuestionItem
                android:id="@+id/covidQuestion8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                app:layout_constraintTop_toBottomOf="@id/covidQuestion7"
                app:questionText="@string/lorem_ipsum" />

            <eu.ase.grupa1088.licenta.customviews.CovidQuestionItem
                android:id="@+id/covidQuestion9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                app:layout_constraintTop_toBottomOf="@id/covidQuestion8"
                app:questionText="@string/lorem_ipsum" />

            <eu.ase.grupa1088.licenta.customviews.CovidQuestionItem
                android:id="@+id/covidQuestion10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                app:layout_constraintTop_toBottomOf="@id/covidQuestion9"
                app:questionText="@string/lorem_ipsum" />

            <eu.ase.grupa1088.licenta.customviews.CovidQuestionItem
                android:id="@+id/covidQuestion11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                app:layout_constraintTop_toBottomOf="@id/covidQuestion10"
                app:questionText="@string/lorem_ipsum" />

            <eu.ase.grupa1088.licenta.customviews.CovidQuestionItem
                android:id="@+id/covidQuestion12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                app:layout_constraintTop_toBottomOf="@id/covidQuestion11"
                app:questionText="@string/lorem_ipsum" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnGetScreeningResults"
                style="@style/CustomButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:text="@string/afla_raspunsul" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>

    <include
        android:id="@+id/layoutProgress"
        layout="@layout/layout_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>