<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Licenta" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">#B8720A</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/red_light1</item>
        <item name="android:fontFamily">@font/mustica_pro_semibold</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
    </style>

    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="android:padding">@dimen/dimen_12dp</item>
        <item name="android:paddingStart">@dimen/dimen_15dp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textColorHint">@color/red_dark1</item>
        <item name="android:fontFamily">@font/mustica_pro_semibold</item>
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:textSize">@dimen/dimen_20sp</item>
        <item name="android:ems">10</item>
    </style>

    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/dimen_15dp</item>
        <item name="android:background">@drawable/button_bg</item>
    </style>

    <style name="CustomButton.Inverted" parent="Widget.AppCompat.Button">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:textColor">@color/red_dark2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/dimen_15dp</item>
        <item name="android:background">@drawable/card_medical_appointment</item>
    </style>

    <style name="CustomTextView.Title" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/dimen_32sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/mont_heavy</item>
    </style>

    <style name="CustomTextView.Body" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">start</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:textColor">@color/red_dark1</item>
        <item name="android:fontFamily">@font/mustica_pro_semibold</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="android:backgroundTint">@color/red_light1</item>
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
</resources>